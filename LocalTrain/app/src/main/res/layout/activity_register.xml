<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mohebbadawy.localtrain.RegisterActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Registeration Form"
            android:id="@+id/textView"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="#ff0000" />
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:text="User ID       :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="0"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userID_txt_Registration"
                android:inputType="number"
                android:hint="User ID"
                android:layout_column="1"
                android:ems="10"
                android:enabled="false"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/edit_text_style"
                />

        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name         : "
                android:id="@+id/textView1"
                android:textSize="20dp"
                android:layout_column="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name"
                android:ems="10"
                android:id="@+id/userName_txt_Registration"
                android:layout_column="1"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:text="Address     :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="0"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_txt_Registration"
                android:hint="Address"
                android:layout_column="1"
                android:ems="10"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:text="Mobile        :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="0"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobile_txt_Registration"
                android:hint="Mobile"
                android:inputType="phone"
                android:layout_column="1"
                android:ems="10"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Age             :"
            android:textSize="20dp"
            android:id="@+id/textView2"
            android:layout_column="0"

            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:inputType="number"
            android:hint="Age"
            android:ems="10"
            android:id="@+id/age_txt_Registration"
            android:layout_column="1"
            />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Password  :"
                android:textSize="20dp"
                android:id="@+id/textView6"
                android:layout_column="0"

                />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:inputType="textPassword"
                android:hint="Password "
                android:ems="10"
                android:id="@+id/pass_txt_Registration"
                android:layout_column="1"
                />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:text="Balance      :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_column="0"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/balance_txt_Registration"
                android:hint="Balance"
                android:inputType="numberDecimal"
                android:layout_column="1"
                android:ems="10"
                />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gender       :"
                android:textSize="20dp"
                android:id="@+id/textView7"
                android:layout_column="0"

                />

            <RadioGroup
                android:orientation="horizontal"
                android:id="@+id/gender_radiogroup_Registration">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/male"
                    android:text="Male "/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/female"
                    android:text="Female"/>
            </RadioGroup>


        </TableRow>




    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/tableLayout"
        android:layout_alignEnd="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/clear_btn_Registeration"
            android:textSize="20dp"
            android:text="Clear"
            android:layout_marginLeft="10dp"

            android:layout_weight="1" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Register"
            android:textSize="20dp"
            android:layout_column="1"
            android:id="@+id/reg_btn_Regestration"
            android:layout_weight="1" />


        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Back"
            android:textSize="20dp"
            android:layout_column="1"
            android:id="@+id/bk_btn_Regesteration"

            android:layout_weight="1" />


    </LinearLayout>


</RelativeLayout>
