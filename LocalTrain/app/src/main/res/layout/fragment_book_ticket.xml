<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.mohebbadawy.localtrain.bookTicketFragment"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Ticket"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textStyle="bold"/>




    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ticket ID:-"
                    android:textSize="20sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_column="0"
                    />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:id="@+id/ticketID_txt_ticketBooking"
                    android:hint="Ticket ID"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/edit_text_style"
                    />

            </TableRow>


            <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"

                >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train Type:-"
                android:textSize="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_column="0"

                android:lines="2"
                android:layout_weight="1" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trainType_spinner"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dialog"
                android:layout_weight="1"
                android:layout_column="1"
                />

    </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arrival:-"
                    android:textSize="20sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_column="0"
                    android:lines="2"
                    android:layout_weight="1" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/arrivalStations_spinner"
                    android:layout_marginLeft="5dp"
                    android:spinnerMode="dialog"
                    android:layout_weight="1"
                    android:layout_column="1"
                    />

            </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination:-"
            android:textSize="20sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_column="0"


            android:lines="2"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departureStations_spinner"
            android:layout_marginLeft="5dp"
            android:spinnerMode="dialog"
            android:layout_weight="1"
            android:layout_column="1"
            />


    </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Train Time:-"
                    android:textSize="20sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_column="0"


                    android:lines="2"
                    android:layout_weight="1" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainTime_spinner"
                    android:layout_marginLeft="5dp"
                    android:spinnerMode="dialog"
                    android:layout_weight="1"
                    android:layout_column="1" />

            </TableRow>





            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">



                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Train Degree:-"
                    android:textSize="20sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_column="0"


                    android:layout_weight="1" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trainDegreeTradioGroup"
                    android:layout_column="1"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">


                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/firstDegreeType"
                        android:text="First   "

                        />

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/secondDegreeType"
                        android:text="Second"
                        android:layout_marginLeft="10dp"

                        />

                </RadioGroup>

            </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">



        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Journey Type:-"
            android:textSize="20sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_column="0"


            android:layout_weight="1" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/journeyTradioGroup"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">


            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/singleJourneyType"
                android:text="Single"

                />

            <RadioButton
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/ReturnJourneyType"
                android:text="Return"
                android:layout_marginLeft="10dp"

                />

        </RadioGroup>

    </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cost:-"
                    android:textSize="20sp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_column="0"


                    android:lines="2"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/cost_Txt_bookTicket"
                    android:layout_column="1"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:enabled="false"
                    android:textAlignment="center"
                    android:hint="Journey's cost "
                    android:layout_weight="1" />

            </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">



        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Total  Cost:-"
            android:textSize="20sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_column="0"


            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalCost_bookingTicket_txt"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:enabled="false"
            android:textAlignment="center"
            android:background="@drawable/edit_text_style"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">



        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Balance:-"
            android:textSize="20sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_column="0"


            android:layout_gravity="top"
            android:layout_weight="1" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/balance_bookingTicket_txt"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:enabled="false"
            android:textAlignment="center"
            android:background="@drawable/edit_text_style"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book"
            android:id="@+id/bookTicket_btn"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
            android:layout_column="1"


            android:layout_weight="1" />

        </TableRow>


                </TableLayout>

        </ScrollView>

    </LinearLayout>